        <header>
            
            <a class="linkLogo" href="/">
                <img src="{{ asset('pictures/logos/fakelogo.png') }}" alt="Logo goldershark">
            </a>
            
        </header>

        <menu id="MenuApp">
            <div id="MenuOpenClose"> <i class="fas fa-chevron-left"></i> </div>
            
            <div class="containerLinkMenu">
                <a class="menuSimpleLink" href="/"><i class="fas fa-user"></i> <span class="MenuTextButton">Accueil</span></a>
                <a class="menuSimpleLink" href="/grade"><i class="fas fa-medal"></i> <span class="MenuTextButton">Mes grades</span></a>
