                <a class="menuSimpleLink" href="/grade"><i class="fas fa-building"></i> <span class="MenuTextButton">Mon entreprise</span></a>
                <a class="menuSimpleLink" href="/grade"><i class="fas fa-chart-line"></i> <span class="MenuTextButton">Mes actions</span></a>

            </div>

        </menu>


        <main>
            {% block body %}{% endblock %}
